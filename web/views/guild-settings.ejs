  <script>
    const guildId = '<%= guildId %>';
    let blocks = [];
    let blockCounter = 1;
    let ruleCounter = 1;
    
    // –ó–∞–≥—Ä—É–∑–∫–∞ —Å—É—â–µ—Å—Ç–≤—É—é—â–∏—Ö –±–ª–æ–∫–æ–≤
    function loadBlocks() {
      const blocksData = <%= JSON.stringify(settings.rules_data || []) %>;
      if (blocksData && blocksData.length > 0) {
        blocks = blocksData;
        // –ù–∞—Ö–æ–¥–∏–º –º–∞–∫—Å–∏–º–∞–ª—å–Ω—ã–µ ID
        blockCounter = Math.max(...blocks.map(b => b.id || 0), 0) + 1;
        const allRuleIds = blocks.flatMap(b => (b.rules || []).map(r => r.id || 0));
        ruleCounter = allRuleIds.length > 0 ? Math.max(...allRuleIds, 0) + 1 : 1;
        renderBlocks();
      } else {
        // –ï—Å–ª–∏ –±–ª–æ–∫–æ–≤ –Ω–µ—Ç, –ø–æ–∫–∞–∑—ã–≤–∞–µ–º –ø—É—Å—Ç–æ–µ —Å–æ—Å—Ç–æ—è–Ω–∏–µ
        document.getElementById('blocksContainer').innerHTML = `
