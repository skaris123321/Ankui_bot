            <div class="empty-rules-icon">üìú</div>
            <p>–ë–ª–æ–∫–∏ –ø—Ä–∞–≤–∏–ª –ø–æ–∫–∞ –Ω–µ –¥–æ–±–∞–≤–ª–µ–Ω—ã</p>
            <p style="font-size: 0.9rem; margin-top: 0.5rem;">–ù–∞–∂–º–∏—Ç–µ "‚ûï –î–æ–±–∞–≤–∏—Ç—å –±–ª–æ–∫ –ø—Ä–∞–≤–∏–ª" —á—Ç–æ–±—ã –Ω–∞—á–∞—Ç—å</p>
          </div>
        `;
      }
    }
    
    // –î–æ–±–∞–≤–ª–µ–Ω–∏–µ –Ω–æ–≤–æ–≥–æ –±–ª–æ–∫–∞
    function addBlock() {
      const block = {
        id: blockCounter++,
        title: '',
        rules: [],
        image: '',
        icon: ''
      };
      blocks.push(block);
      renderBlocks();
    }
    
    // –£–¥–∞–ª–µ–Ω–∏–µ –±–ª–æ–∫–∞
    function removeBlock(blockId) {
      blocks = blocks.filter(b => b.id !== blockId);
      renderBlocks();
    }
    
    // –î–æ–±–∞–≤–ª–µ–Ω–∏–µ –ø—Ä–∞–≤–∏–ª–∞ –≤ –±–ª–æ–∫
    function addRuleToBlock(blockId) {
      const block = blocks.find(b => b.id === blockId);
      if (block) {
        if (!block.rules) block.rules = [];
        const rule = {
          id: ruleCounter++,
          number: '',
          description: '',
          punishment: '',
          duration: ''
        };
        block.rules.push(rule);
        renderBlocks();
      }
    }
    
    // –£–¥–∞–ª–µ–Ω–∏–µ –ø—Ä–∞–≤–∏–ª–∞ –∏–∑ –±–ª–æ–∫–∞
    function removeRuleFromBlock(blockId, ruleId) {
      const block = blocks.find(b => b.id === blockId);
      if (block && block.rules) {
        block.rules = block.rules.filter(r => r.id !== ruleId);
        renderBlocks();
      }
    }
    
    // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –ø–æ–ª—è –±–ª–æ–∫–∞
    function updateBlock(blockId, field, value) {
      const block = blocks.find(b => b.id === blockId);
      if (block) {
        block[field] = value;
        updateRulesData();
      }
    }
    
    // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –ø–æ–ª—è –ø—Ä–∞–≤–∏–ª–∞
    function updateRule(blockId, ruleId, field, value) {
      const block = blocks.find(b => b.id === blockId);
      if (block && block.rules) {
        const rule = block.rules.find(r => r.id === ruleId);
        if (rule) {
          rule[field] = value;
          updateRulesData();
        }
      }
    }
    
    // –û—Ç—Ä–∏—Å–æ–≤–∫–∞ –≤—Å–µ—Ö –±–ª–æ–∫–æ–≤
    function renderBlocks() {
      const container = document.getElementById('blocksContainer');
      
      if (blocks.length === 0) {
        container.innerHTML = `
          <div class="empty-rules">
            <div class="empty-rules-icon">üìú</div>
            <p>–ë–ª–æ–∫–∏ –ø—Ä–∞–≤–∏–ª –ø–æ–∫–∞ –Ω–µ –¥–æ–±–∞–≤–ª–µ–Ω—ã</p>
            <p style="font-size: 0.9rem; margin-top: 0.5rem;">–ù–∞–∂–º–∏—Ç–µ "‚ûï –î–æ–±–∞–≤–∏—Ç—å –±–ª–æ–∫ –ø—Ä–∞–≤–∏–ª" —á—Ç–æ–±—ã –Ω–∞—á–∞—Ç—å</p>
          </div>
        `;
        updateRulesData();
        return;
      }
      
      container.innerHTML = blocks.map(block => `
        <div class="rule-block" data-block-id="${block.id}">
          <div class="block-header">
            <input type="text" 
                   class="block-title-input" 
                   value="${escapeHtml(block.title || '')}" 
                   placeholder="–ù–∞–∑–≤–∞–Ω–∏–µ –±–ª–æ–∫–∞ (–Ω–∞–ø—Ä–∏–º–µ—Ä: –ü—Ä–∞–≤–∏–ª–∞ —á–∞—Ç–∞)"
                   onchange="updateBlock(${block.id}, 'title', this.value)">
            <button type="button" class="block-remove-btn" onclick="removeBlock(${block.id})">üóëÔ∏è –£–¥–∞–ª–∏—Ç—å –±–ª–æ–∫</button>
          </div>
          
          <div class="block-rules-list">
            ${(block.rules || []).map(rule => `
              <div class="block-rule-item">
                <div class="block-rule-header">
                  <div class="block-rule-number">–ü—Ä–∞–≤–∏–ª–æ ${rule.number || rule.id}</div>
                  <button type="button" class="block-rule-remove-btn" onclick="removeRuleFromBlock(${block.id}, ${rule.id})">‚úï –£–¥–∞–ª–∏—Ç—å</button>
                </div>
                <div class="block-rule-fields">
                  <div class="block-rule-field">
                    <label>–ù–æ–º–µ—Ä –ø—Ä–∞–≤–∏–ª–∞:</label>
                    <input type="text" 
                           value="${escapeHtml(rule.number || '')}" 
                           placeholder="–ù–∞–ø—Ä–∏–º–µ—Ä: 2.1"
                           onchange="updateRule(${block.id}, ${rule.id}, 'number', this.value)">
                  </div>
                  <div class="block-rule-field">
                    <label>–û–ø–∏—Å–∞–Ω–∏–µ:</label>
                    <textarea placeholder="–û–ø–∏—à–∏—Ç–µ –ø—Ä–∞–≤–∏–ª–æ..."
                              onchange="updateRule(${block.id}, ${rule.id}, 'description', this.value)">${escapeHtml(rule.description || '')}</textarea>
                  </div>
                  <div class="block-rule-field-row">
                    <div class="block-rule-field">
                      <label>–ù–∞–∫–∞–∑–∞–Ω–∏–µ:</label>
                      <input type="text" 
                             value="${escapeHtml(rule.punishment || '')}" 
                             placeholder="–ù–∞–ø—Ä–∏–º–µ—Ä: –ü—Ä–µ–¥ / –º—É—Ç"
                             onchange="updateRule(${block.id}, ${rule.id}, 'punishment', this.value)">
                    </div>
                    <div class="block-rule-field">
                      <label>–î–ª–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å:</label>
                      <input type="text" 
                             value="${escapeHtml(rule.duration || '')}" 
                             placeholder="–ù–∞–ø—Ä–∏–º–µ—Ä: –î–æ 30 –º–∏–Ω—É—Ç"
                             onchange="updateRule(${block.id}, ${rule.id}, 'duration', this.value)">
