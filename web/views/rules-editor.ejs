  <script>
    let selectedGuildId = null;
    let blocks = [];
    let blockCounter = 1;
    let ruleCounter = 1;
    
    // –ó–∞–≥—Ä—É–∑–∫–∞ —Å–µ—Ä–≤–µ—Ä–æ–≤
    async function loadServers() {
      const serverList = document.getElementById('serverList');
      if (!serverList) {
        console.error('–≠–ª–µ–º–µ–Ω—Ç serverList –Ω–µ –Ω–∞–π–¥–µ–Ω');
        return;
      }
      
      serverList.innerHTML = '<p>–ó–∞–≥—Ä—É–∑–∫–∞ —Å–µ—Ä–≤–µ—Ä–æ–≤...</p>';
      
      try {
        const response = await fetch('/api/guilds');
        
        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }
        
        const guilds = await response.json();
        
        if (!Array.isArray(guilds)) {
          throw new Error('–ù–µ–≤–µ—Ä–Ω—ã–π —Ñ–æ—Ä–º–∞—Ç –æ—Ç–≤–µ—Ç–∞ –æ—Ç —Å–µ—Ä–≤–µ—Ä–∞');
        }
        
        if (guilds.length === 0) {
          serverList.innerHTML = '<p>‚ö†Ô∏è –ë–æ—Ç –Ω–µ –ø–æ–¥–∫–ª—é—á–µ–Ω –Ω–∏ –∫ –æ–¥–Ω–æ–º—É —Å–µ—Ä–≤–µ—Ä—É.</p>';
          return;
        }
        
        serverList.innerHTML = '';
        guilds.forEach(guild => {
          const card = document.createElement('div');
          card.className = 'server-card';
          card.innerHTML = `
            <div class="server-icon">
              ${guild.icon ? `<img src="${guild.icon}" alt="${guild.name}">` : guild.name.charAt(0).toUpperCase()}
            </div>
            <div class="server-name">${guild.name}</div>
            <div class="server-members">üë• ${guild.memberCount || 0} —É—á–∞—Å—Ç–Ω–∏–∫–æ–≤</div>
          `;
          card.onclick = (e) => selectServer(guild.id, guild.name, card);
          serverList.appendChild(card);
        });
      } catch (error) {
        console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ —Å–µ—Ä–≤–µ—Ä–æ–≤:', error);
        serverList.innerHTML = '<p>‚ùå –û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ —Å–µ—Ä–≤–µ—Ä–æ–≤: ' + error.message + '</p>';
      }
    }
    
    // –í—ã–±–æ—Ä —Å–µ—Ä–≤–µ—Ä–∞
    async function selectServer(guildId, guildName, cardElement) {
      selectedGuildId = guildId;
      
      // –û–±–Ω–æ–≤–ª—è–µ–º –≤—ã–¥–µ–ª–µ–Ω–∏–µ
      document.querySelectorAll('.server-card').forEach(card => {
        card.classList.remove('selected');
      });
      
      if (cardElement) {
        cardElement.classList.add('selected');
      }
      
      // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —Ä–µ–¥–∞–∫—Ç–æ—Ä
      const rulesEditorSection = document.getElementById('rulesEditorSection');
      if (rulesEditorSection) {
        rulesEditorSection.style.display = 'block';
      }
      
      const serverSelector = document.getElementById('serverSelector');
      if (serverSelector) {
        serverSelector.scrollIntoView({ behavior: 'smooth' });
      }
      
      // –ó–∞–≥—Ä—É–∂–∞–µ–º —Å—É—â–µ—Å—Ç–≤—É—é—â–∏–µ –ø—Ä–∞–≤–∏–ª–∞
      await loadRules(guildId);
    }
    
    // –ó–∞–≥—Ä—É–∑–∫–∞ —Å—É—â–µ—Å—Ç–≤—É—é—â–∏—Ö –ø—Ä–∞–≤–∏–ª
    async function loadRules(guildId) {
      try {
        const response = await fetch(`/api/guild/${guildId}/settings`);
        
        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }
        
        const settings = await response.json();
        
        let blocksData = settings.rules_data || [];
        
        // –ï—Å–ª–∏ rules_data - —Å—Ç—Ä–æ–∫–∞ JSON, –ø–∞—Ä—Å–∏–º –µ—ë
        if (typeof blocksData === 'string') {
          try {
            blocksData = JSON.parse(blocksData);
          } catch (e) {
            console.error('–û—à–∏–±–∫–∞ –ø–∞—Ä—Å–∏–Ω–≥–∞ rules_data:', e);
            blocksData = [];
          }
        }
        
        // –£–±–µ–∂–¥–∞–µ–º—Å—è, —á—Ç–æ —ç—Ç–æ –º–∞—Å—Å–∏–≤
        if (!Array.isArray(blocksData)) {
          blocksData = [];
        }
        
        if (blocksData && blocksData.length > 0) {
          blocks = blocksData;
          blockCounter = Math.max(...blocks.map(b => b.id || 0), 0) + 1;
          const allRuleIds = blocks.flatMap(b => (b.rules || []).map(r => r.id || 0));
          ruleCounter = allRuleIds.length > 0 ? Math.max(...allRuleIds, 0) + 1 : 1;
        } else {
          blocks = [];
          blockCounter = 1;
          ruleCounter = 1;
        }
        
        renderBlocks();
      } catch (error) {
        console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –ø—Ä–∞–≤–∏–ª:', error);
        blocks = [];
        blockCounter = 1;
        ruleCounter = 1;
        renderBlocks();
      }
    }
    
    // –î–æ–±–∞–≤–ª–µ–Ω–∏–µ –Ω–æ–≤–æ–≥–æ –±–ª–æ–∫–∞
    function addBlock() {
      const block = {
        id: blockCounter++,
        title: '',
        rules: [],
        image: '',
        icon: ''
      };
      blocks.push(block);
      renderBlocks();
    }
    
    // –£–¥–∞–ª–µ–Ω–∏–µ –±–ª–æ–∫–∞
    function removeBlock(blockId) {
      blocks = blocks.filter(b => b.id !== blockId);
      renderBlocks();
    }
    
    // –î–æ–±–∞–≤–ª–µ–Ω–∏–µ –ø—Ä–∞–≤–∏–ª–∞ –≤ –±–ª–æ–∫
    function addRuleToBlock(blockId) {
      const block = blocks.find(b => b.id === blockId);
      if (block) {
        if (!block.rules) block.rules = [];
        const rule = {
          id: ruleCounter++,
          number: '',
          description: '',
          punishment: '',
          duration: ''
        };
        block.rules.push(rule);
        renderBlocks();
      }
    }
    
    // –£–¥–∞–ª–µ–Ω–∏–µ –ø—Ä–∞–≤–∏–ª–∞ –∏–∑ –±–ª–æ–∫–∞
    function removeRuleFromBlock(blockId, ruleId) {
      const block = blocks.find(b => b.id === blockId);
      if (block && block.rules) {
        block.rules = block.rules.filter(r => r.id !== ruleId);
        renderBlocks();
      }
    }
    
    // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –ø–æ–ª—è –±–ª–æ–∫–∞
    function updateBlock(blockId, field, value) {
      const block = blocks.find(b => b.id === blockId);
      if (block) {
        block[field] = value;
        updateRulesData();
      }
    }
    
    // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –ø–æ–ª—è –ø—Ä–∞–≤–∏–ª–∞
    function updateRule(blockId, ruleId, field, value) {
      const block = blocks.find(b => b.id === blockId);
      if (block && block.rules) {
        const rule = block.rules.find(r => r.id === ruleId);
        if (rule) {
          rule[field] = value;
          updateRulesData();
        }
      }
    }
    
    // –û—Ç—Ä–∏—Å–æ–≤–∫–∞ –≤—Å–µ—Ö –±–ª–æ–∫–æ–≤
    function renderBlocks() {
      const container = document.getElementById('blocksContainer');
      
      if (blocks.length === 0) {
        container.innerHTML = `
          <div class="empty-rules">
            <div class="empty-rules-icon">üìú</div>
            <p>–ë–ª–æ–∫–∏ –ø—Ä–∞–≤–∏–ª –ø–æ–∫–∞ –Ω–µ –¥–æ–±–∞–≤–ª–µ–Ω—ã</p>
            <p style="font-size: 0.9rem; margin-top: 0.5rem;">–ù–∞–∂–º–∏—Ç–µ "‚ûï –î–æ–±–∞–≤–∏—Ç—å –±–ª–æ–∫ –ø—Ä–∞–≤–∏–ª" —á—Ç–æ–±—ã –Ω–∞—á–∞—Ç—å</p>
          </div>
        `;
        updateRulesData();
        return;
      }
      
      container.innerHTML = blocks.map(block => `
        <div class="rule-block" data-block-id="${block.id}">
          <div class="block-header">
            <input type="text" 
                   class="block-title-input" 
                   value="${escapeHtml(block.title || '')}" 
                   placeholder="–ù–∞–∑–≤–∞–Ω–∏–µ –±–ª–æ–∫–∞ (–Ω–∞–ø—Ä–∏–º–µ—Ä: –ü—Ä–∞–≤–∏–ª–∞ —á–∞—Ç–∞)"
                   onchange="updateBlock(${block.id}, 'title', this.value)">
            <button type="button" class="block-remove-btn" onclick="removeBlock(${block.id})">üóëÔ∏è –£–¥–∞–ª–∏—Ç—å –±–ª–æ–∫</button>
          </div>
          
          <button type="button" class="add-rule-to-block-btn" onclick="addRuleToBlock(${block.id})" style="margin-bottom: 1rem;">‚ûï –î–æ–±–∞–≤–∏—Ç—å –ø—Ä–∞–≤–∏–ª–æ –≤ —ç—Ç–æ—Ç –±–ª–æ–∫</button>
          
          <div class="block-rules-list">
            ${(block.rules && block.rules.length > 0) ? '' : `
              <div style="text-align: center; padding: 1rem; color: var(--text-secondary); font-style: italic;">
                –ü—Ä–∞–≤–∏–ª–∞ –≤ —ç—Ç–æ–º –±–ª–æ–∫–µ –ø–æ–∫–∞ –Ω–µ –¥–æ–±–∞–≤–ª–µ–Ω—ã
              </div>
            `}
            ${(block.rules || []).map(rule => `
              <div class="block-rule-item">
                <div class="block-rule-header">
                  <div class="block-rule-number">–ü—Ä–∞–≤–∏–ª–æ ${rule.number || rule.id}</div>
                  <button type="button" class="block-rule-remove-btn" onclick="removeRuleFromBlock(${block.id}, ${rule.id})">‚úï –£–¥–∞–ª–∏—Ç—å</button>
                </div>
                <div class="block-rule-fields">
                  <div class="block-rule-field">
                    <label>–ù–æ–º–µ—Ä –ø—Ä–∞–≤–∏–ª–∞:</label>
                    <input type="text" 
                           value="${escapeHtml(rule.number || '')}" 
                           placeholder="–ù–∞–ø—Ä–∏–º–µ—Ä: 2.1"
                           onchange="updateRule(${block.id}, ${rule.id}, 'number', this.value)">
                  </div>
                  <div class="block-rule-field">
                    <label>–û–ø–∏—Å–∞–Ω–∏–µ:</label>
                    <textarea placeholder="–û–ø–∏—à–∏—Ç–µ –ø—Ä–∞–≤–∏–ª–æ..."
                              onchange="updateRule(${block.id}, ${rule.id}, 'description', this.value)">${escapeHtml(rule.description || '')}</textarea>
                  </div>
                  <div class="block-rule-field-row">
                    <div class="block-rule-field">
                      <label>–ù–∞–∫–∞–∑–∞–Ω–∏–µ:</label>
                      <input type="text" 
                             value="${escapeHtml(rule.punishment || '')}" 
                             placeholder="–ù–∞–ø—Ä–∏–º–µ—Ä: –ü—Ä–µ–¥ / –º—É—Ç"
                             onchange="updateRule(${block.id}, ${rule.id}, 'punishment', this.value)">
                    </div>
                    <div class="block-rule-field">
                      <label>–î–ª–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å:</label>
                      <input type="text" 
                             value="${escapeHtml(rule.duration || '')}" 
                             placeholder="–ù–∞–ø—Ä–∏–º–µ—Ä: –î–æ 30 –º–∏–Ω—É—Ç"
                             onchange="updateRule(${block.id}, ${rule.id}, 'duration', this.value)">
                    </div>
                  </div>
                </div>
              </div>
            `).join('')}
          </div>
          
          <div class="block-media">
            <div class="block-media-field">
              <label>üñºÔ∏è –ö–∞—Ä—Ç–∏–Ω–∫–∞ (URL):</label>
              <input type="url" 
                     value="${escapeHtml(block.image || '')}" 
                     placeholder="https://example.com/image.png"
                     onchange="updateBlock(${block.id}, 'image', this.value)">
            </div>
            <div class="block-media-field">
              <label>üé® –ò–∫–æ–Ω–∫–∞ (URL):</label>
              <input type="url" 
                     value="${escapeHtml(block.icon || '')}" 
                     placeholder="https://example.com/icon.png"
                     onchange="updateBlock(${block.id}, 'icon', this.value)">
            </div>
          </div>
        </div>
      `).join('');
      
      updateRulesData();
    }
    
    // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Å–∫—Ä—ã—Ç–æ–≥–æ –ø–æ–ª—è —Å –¥–∞–Ω–Ω—ã–º–∏ –ø—Ä–∞–≤–∏–ª
    function updateRulesData() {
      document.getElementById('rulesData').value = JSON.stringify(blocks);
    }
    
    // –°–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ –ø—Ä–∞–≤–∏–ª
    async function saveRules() {
      if (!selectedGuildId) {
        showMessage('error', '‚ùå –í—ã–±–µ—Ä–∏—Ç–µ —Å–µ—Ä–≤–µ—Ä!');
        return;
      }
      
      updateRulesData();
      
      const settings = {
        rules_data: JSON.parse(document.getElementById('rulesData').value || '[]')
      };
      
      try {
        const response = await fetch(`/api/guild/${selectedGuildId}/settings`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(settings)
        });
        
        const result = await response.json();
        
        const messageDiv = document.getElementById('saveMessage');
        if (result.success) {
          messageDiv.textContent = '‚úÖ ' + result.message;
          messageDiv.className = 'save-message success';
        } else {
          messageDiv.textContent = '‚ùå ' + result.message;
          messageDiv.className = 'save-message error';
        }
        
        messageDiv.style.display = 'block';
        setTimeout(() => {
          messageDiv.style.display = 'none';
        }, 3000);
      } catch (error) {
        console.error('Error:', error);
        showMessage('error', '‚ùå –û—à–∏–±–∫–∞ –ø—Ä–∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–∏ –ø—Ä–∞–≤–∏–ª');
      }
    }
    
    // –°–±—Ä–æ—Å –ø—Ä–∞–≤–∏–ª
    function resetRules() {
      if (confirm('–í—ã —É–≤–µ—Ä–µ–Ω—ã, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ —Å–±—Ä–æ—Å–∏—Ç—å –≤—Å–µ –∏–∑–º–µ–Ω–µ–Ω–∏—è?')) {
        loadRules(selectedGuildId);
      }
    }
    
    // –ü–æ–∫–∞–∑–∞—Ç—å —Å–æ–æ–±—â–µ–Ω–∏–µ
    function showMessage(type, text) {
      const messageDiv = document.getElementById('saveMessage');
      messageDiv.textContent = text;
      messageDiv.className = `save-message ${type}`;
      messageDiv.style.display = 'block';
      setTimeout(() => {
        messageDiv.style.display = 'none';
      }, 3000);
    }
    
    // –≠–∫—Ä–∞–Ω–∏—Ä–æ–≤–∞–Ω–∏–µ HTML
    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }
    
    // –ó–∞–≥—Ä—É–∂–∞–µ–º —Å–µ—Ä–≤–µ—Ä—ã –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
    document.addEventListener('DOMContentLoaded', () => {
      loadServers();
    });
  </script>
