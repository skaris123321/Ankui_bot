    // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –≤—ã–±–æ—Ä–∞ —Å–µ—Ä–≤–µ—Ä–∞ –∏–∑ —Ç—É–ª–±–∞—Ä–∞
    async function handleServerSelect(guildId) {
      if (!guildId) {
        selectedGuildId = null;
        selectedChannelId = null;
        const channelSelect = document.getElementById('channelSelectToolbar');
        if (channelSelect) {
          channelSelect.style.display = 'none';
        }
        return;
      }
      
      const serverSelect = document.getElementById('serverSelectToolbar');
      const guildName = serverSelect.options[serverSelect.selectedIndex].dataset.guildName;
      await selectGuild(guildId, guildName);
      
      // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –≤—ã–±–æ—Ä –∫–∞–Ω–∞–ª–∞ –≤ —Ç—É–ª–±–∞—Ä–µ
      const channelSelect = document.getElementById('channelSelectToolbar');
      if (channelSelect) {
        channelSelect.style.display = 'block';
      }
    }
    
    // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –≤—ã–±–æ—Ä–∞ –∫–∞–Ω–∞–ª–∞ –∏–∑ —Ç—É–ª–±–∞—Ä–∞
    function handleChannelSelect(channelId) {
      if (!channelId) {
        selectedChannelId = null;
        return;
      }
      
      const channelSelect = document.getElementById('channelSelectToolbar');
      const channelName = channelSelect.options[channelSelect.selectedIndex].textContent.replace('# ', '');
      selectChannel(channelId, channelName);
    }
    
    // –í—ã–±–æ—Ä —Å–µ—Ä–≤–µ—Ä–∞
    async function selectGuild(guildId, guildName) {
      selectedGuildId = guildId;
      selectedChannelId = null;
      
      // –ó–∞–≥—Ä—É–∂–∞–µ–º –∫–∞–Ω–∞–ª—ã
      try {
        const response = await fetch(`/api/guild/${guildId}/channels`);
        const data = await response.json();
        
        if (data.success) {
          // –û–±–Ω–æ–≤–ª—è–µ–º select –∫–∞–Ω–∞–ª–æ–≤ –≤ —Ç—É–ª–±–∞—Ä–µ
          const channelSelectToolbar = document.getElementById('channelSelectToolbar');
          if (channelSelectToolbar) {
            channelSelectToolbar.innerHTML = '<option value="">–í—ã–±–µ—Ä–∏—Ç–µ –∫–∞–Ω–∞–ª...</option>';
            
            data.channels.forEach(channel => {
              const option = document.createElement('option');
              option.value = channel.id;
              option.textContent = '# ' + channel.name;
              channelSelectToolbar.appendChild(option);
            });
            
            channelSelectToolbar.style.display = 'block';
          }
          
          // –¢–∞–∫–∂–µ –æ–±–Ω–æ–≤–ª—è–µ–º —Å—Ç–∞—Ä–æ–µ –ø–æ–ª–µ –¥–ª—è –æ–±—Ä–∞—Ç–Ω–æ–π —Å–æ–≤–º–µ—Å—Ç–∏–º–æ—Å—Ç–∏ (–µ—Å–ª–∏ –µ—Å—Ç—å)
          const oldChannelList = document.getElementById('channelList');
          if (oldChannelList) {
            oldChannelList.innerHTML = '';
            data.channels.forEach(channel => {
              const channelItem = document.createElement('div');
              channelItem.className = 'channel-item';
              channelItem.dataset.channelId = channel.id;
              channelItem.textContent = '# ' + channel.name;
              channelItem.onclick = () => selectChannel(channel.id, channel.name);
              oldChannelList.appendChild(channelItem);
            });
          }
        } else {
          showMessage('error', '‚ùå –ù–µ —É–¥–∞–ª–æ—Å—å –∑–∞–≥—Ä—É–∑–∏—Ç—å –∫–∞–Ω–∞–ª—ã');
        }
      } catch (error) {
        console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –∫–∞–Ω–∞–ª–æ–≤:', error);
        showMessage('error', '‚ùå –û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –∫–∞–Ω–∞–ª–æ–≤');
      }
    }
    
    // –í—ã–±–æ—Ä –∫–∞–Ω–∞–ª–∞
    function selectChannel(channelId, channelName) {
      selectedChannelId = channelId;
      
      // –û–±–Ω–æ–≤–ª—è–µ–º select –≤ —Ç—É–ª–±–∞—Ä–µ
      const channelSelectToolbar = document.getElementById('channelSelectToolbar');
