    function formatMarkdown(text) {
      if (!text) return '';
      return text
        .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
        .replace(/\*(.*?)\*/g, '<em>$1</em>')
        .replace(/~~(.*?)~~/g, '<del>$1</del>')
        .replace(/`(.*?)`/g, '<code>$1</code>')
        .replace(/\n/g, '<br>')
        .replace(/&lt;@(\d+)&gt;/g, '<span style="color: #5865F2;">@–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å</span>')
        .replace(/&lt;@&amp;(\d+)&gt;/g, '<span style="color: #5865F2;">@–†–æ–ª—å</span>');
    }
    
