      // –ó–∞–≥—Ä—É–∂–∞–µ–º –±–ª–æ–∫–∏ embed
      loadEmbedBlocks();
      
      // –ó–∞–≥—Ä—É–∂–∞–µ–º –∫–∞–Ω–∞–ª—ã
      try {
        const response = await fetch(`/api/guild/${guildId}/channels`);
        const data = await response.json();
        
        if (data.success) {
          // –û–±–Ω–æ–≤–ª—è–µ–º select –∫–∞–Ω–∞–ª–æ–≤ –≤ —Ç—É–ª–±–∞—Ä–µ
