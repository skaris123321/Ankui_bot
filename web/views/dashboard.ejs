        document.getElementById('imageFileName').textContent = `‚úÖ ${file.name} –∑–∞–≥—Ä—É–∂–µ–Ω–æ (${(file.size / 1024).toFixed(1)} –ö–ë)`;
        
        // –û–±–Ω–æ–≤–ª—è–µ–º –ø—Ä–µ–¥–ø—Ä–æ—Å–º–æ—Ç—Ä
        if (typeof updatePreview === 'function') {
          updatePreview();
