        // –°–æ–∑–¥–∞—ë–º FormData –¥–ª—è –æ—Ç–ø—Ä–∞–≤–∫–∏ —Ñ–∞–π–ª–∞
        const formData = new FormData();
        formData.append('image', file);
        
        // –û—Ç–ø—Ä–∞–≤–ª—è–µ–º —Ñ–∞–π–ª –Ω–∞ —Å–µ—Ä–≤–µ—Ä
        fetch('/api/upload-image', {
          method: 'POST',
          body: formData
        })
        .then(response => {
          if (!response.ok) {
            throw new Error(`HTTP error! status: ${response.status}`);
          }
          return response.json();
        })
        .then(result => {
          if (result.success) {
            // –í–æ–∑–≤—Ä–∞—â–∞–µ–º –ø–æ–ª–Ω—ã–π URL (—Å –¥–æ–º–µ–Ω–æ–º –¥–ª—è Discord)
            let url = result.url;
            // –£–±–µ–∂–¥–∞–µ–º—Å—è, —á—Ç–æ URL –Ω–∞—á–∏–Ω–∞–µ—Ç—Å—è —Å /
            if (!url.startsWith('/')) {
              url = '/' + url;
            }
            const fullUrl = window.location.origin + url;
            console.log('–§–∞–π–ª –∑–∞–≥—Ä—É–∂–µ–Ω, URL:', fullUrl);
            resolve(fullUrl);
          } else {
            reject(new Error(result.message || '–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏'));
          }
        })
        .catch(error => {
          console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ —Ñ–∞–π–ª–∞:', error);
          reject(error);
        });
      });
