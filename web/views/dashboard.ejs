    // –§—É–Ω–∫—Ü–∏—è —Å–±—Ä–æ—Å–∞ embed
    function resetEmbed() {
      if (confirm('–í—ã —É–≤–µ—Ä–µ–Ω—ã, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ —Å–±—Ä–æ—Å–∏—Ç—å –≤—Å–µ –∏–∑–º–µ–Ω–µ–Ω–∏—è?')) {
        // –°–±—Ä–∞—Å—ã–≤–∞–µ–º –≤—Å–µ –ø–æ–ª—è
        const titleEl = document.getElementById('embedTitle');
        const descEl = document.getElementById('embedDescription');
        const colorEl = document.getElementById('embedColor');
        const imageEl = document.getElementById('embedImage');
        const thumbEl = document.getElementById('embedThumbnail');
        const authorEl = document.getElementById('embedAuthor');
        const authorIconEl = document.getElementById('embedAuthorIcon');
        const footerEl = document.getElementById('embedFooter');
        const footerIconEl = document.getElementById('embedFooterIcon');
        const timestampEl = document.getElementById('embedTimestamp');
        
        if (titleEl) titleEl.value = '';
        if (descEl) descEl.value = '';
        if (colorEl) colorEl.value = '#5865F2';
        if (imageEl) imageEl.value = '';
        if (thumbEl) thumbEl.value = '';
        if (authorEl) authorEl.value = '';
        if (authorIconEl) authorIconEl.value = '';
        if (footerEl) footerEl.value = '';
        if (footerIconEl) footerIconEl.value = '';
        if (timestampEl) timestampEl.checked = false;
        
        // –°–±—Ä–∞—Å—ã–≤–∞–µ–º –±–ª–æ–∫–∏ –ø—Ä–∞–≤–∏–ª
        if (typeof rulesBlocks !== 'undefined') {
          rulesBlocks = [];
          rulesBlockCounter = 1;
          rulesRuleCounter = 1;
          renderRulesBlocks();
        }
        
        // –û–±–Ω–æ–≤–ª—è–µ–º –ø—Ä–µ–¥–ø—Ä–æ—Å–º–æ—Ç—Ä
        if (typeof updatePreview === 'function') {
          updatePreview();
        }
        
        showMessage('success', '‚úÖ Embed —Å–±—Ä–æ—à–µ–Ω');
      }
    }
    
    // –û—Ç–ø—Ä–∞–≤–∫–∞ embed - –ø–µ—Ä–µ–æ–ø—Ä–µ–¥–µ–ª—è–µ–º —Ñ—É–Ω–∫—Ü–∏—é –∏–∑ embed-editor.js
    async function sendEmbed() {
      // –ò—Å–ø–æ–ª—å–∑—É–µ–º –∫–∞–Ω–∞–ª –∏–∑ —Ç—É–ª–±–∞—Ä–∞
      const channelSelectToolbar = document.getElementById('channelSelectToolbar');
      const channelId = channelSelectToolbar ? channelSelectToolbar.value : selectedChannelId;
      
      if (!channelId) {
        showMessage('error', '‚ùå –í—ã–±–µ—Ä–∏—Ç–µ –∫–∞–Ω–∞–ª –¥–ª—è –æ—Ç–ø—Ä–∞–≤–∫–∏!');
        return;
      }
      
      // –ü—Ä–æ–≤–µ—Ä—è–µ–º, –µ—Å—Ç—å –ª–∏ –±–ª–æ–∫–∏ –ø—Ä–∞–≤–∏–ª
      const hasRulesBlocks = typeof rulesBlocks !== 'undefined' && rulesBlocks && rulesBlocks.length > 0;
      
      if (hasRulesBlocks) {
        // –ò—Å–ø–æ–ª—å–∑—É–µ–º —Ñ—É–Ω–∫—Ü–∏—é –∏–∑ embed-editor.js –¥–ª—è –æ—Ç–ø—Ä–∞–≤–∫–∏ –±–ª–æ–∫–æ–≤ –ø—Ä–∞–≤–∏–ª
        // –ù–æ –æ–±–Ω–æ–≤–ª—è–µ–º channelId –ø–µ—Ä–µ–¥ –æ—Ç–ø—Ä–∞–≤–∫–æ–π
        const originalSendEmbed = window.sendEmbedOriginal || sendEmbed;
        
        // –í—Ä–µ–º–µ–Ω–Ω–æ –ø–µ—Ä–µ–æ–ø—Ä–µ–¥–µ–ª—è–µ–º –ø–æ–ª—É—á–µ–Ω–∏–µ channelId
        const originalGetChannel = () => channelId;
        
        // –í—ã–∑—ã–≤–∞–µ–º –æ—Ä–∏–≥–∏–Ω–∞–ª—å–Ω—É—é —Ñ—É–Ω–∫—Ü–∏—é —Å –ø—Ä–∞–≤–∏–ª—å–Ω—ã–º channelId
        const embedData = getEmbedData();
        const colorEl = document.getElementById('embedColor');
        const baseColor = colorEl ? parseInt(colorEl.value.replace('#', ''), 16) : 0x5865F2;
        
        // –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –±–ª–æ–∫–∏ –ø—Ä–∞–≤–∏–ª (—É–ø—Ä–æ—â–µ–Ω–Ω–∞—è –≤–µ—Ä—Å–∏—è)
        for (let i = 0; i < rulesBlocks.length; i++) {
          const block = rulesBlocks[i];
          
          if (block.title || block.rules) {
            const blockEmbed = {
              title: block.title || embedData.title || '–ü—Ä–∞–≤–∏–ª–∞ —Å–µ—Ä–≤–µ—Ä–∞',
              description: embedData.description || '',
              color: baseColor,
              timestamp: embedData.timestamp
            };
            
            if (block.image) {
              blockEmbed.image = { url: block.image };
            }
            if (block.icon) {
              blockEmbed.thumbnail = { url: block.icon };
            }
            
            try {
              const response = await fetch('/api/send-embed', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ channelId: channelId, embed: blockEmbed })
              });
              const result = await response.json();
              if (!result.success) {
                showMessage('error', `‚ùå –û—à–∏–±–∫–∞ –æ—Ç–ø—Ä–∞–≤–∫–∏ –±–ª–æ–∫–∞ ${i + 1}: ${result.message}`);
              }
              await new Promise(resolve => setTimeout(resolve, 500));
            } catch (error) {
              showMessage('error', `‚ùå –û—à–∏–±–∫–∞ –æ—Ç–ø—Ä–∞–≤–∫–∏ –±–ª–æ–∫–∞ ${i + 1}`);
            }
          }
          
          // –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –ø—Ä–∞–≤–∏–ª–∞ –∏–∑ –±–ª–æ–∫–∞
          if (block.rules && block.rules.length > 0) {
            for (let j = 0; j < block.rules.length; j++) {
              const rule = block.rules[j];
              if (!rule.description || rule.description.trim() === '') continue;
              
              const ruleEmbed = {
                description: rule.description,
                color: baseColor,
                timestamp: embedData.timestamp
              };
              
              try {
                const response = await fetch('/api/send-embed', {
                  method: 'POST',
                  headers: { 'Content-Type': 'application/json' },
                  body: JSON.stringify({ channelId: channelId, embed: ruleEmbed })
                });
                await new Promise(resolve => setTimeout(resolve, 500));
              } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –æ—Ç–ø—Ä–∞–≤–∫–∏ –ø—Ä–∞–≤–∏–ª–∞:', error);
              }
            }
          }
        }
        
        showMessage('success', '‚úÖ –ë–ª–æ–∫–∏ –ø—Ä–∞–≤–∏–ª –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω—ã!');
        return;
      }
      
      // –û–±—ã—á–Ω–∞—è –æ—Ç–ø—Ä–∞–≤–∫–∞ embed (–±–µ–∑ –±–ª–æ–∫–æ–≤ –ø—Ä–∞–≤–∏–ª)
      const embedData = getEmbedData();
      
      if (!embedData.title && !embedData.description) {
        showMessage('error', '‚ùå –ó–∞–ø–æ–ª–Ω–∏—Ç–µ —Ö–æ—Ç—è –±—ã –∑–∞–≥–æ–ª–æ–≤–æ–∫ –∏–ª–∏ –æ–ø–∏—Å–∞–Ω–∏–µ!');
        return;
      }
      
      try {
        const response = await fetch('/api/send-embed', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            channelId: channelId,
            embed: embedData
          })
        });
        
        const result = await response.json();
        
        if (result.success) {
          showMessage('success', '‚úÖ –°–æ–æ–±—â–µ–Ω–∏–µ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ –≤ Discord!');
        } else {
          showMessage('error', `‚ùå –û—à–∏–±–∫–∞: ${result.message}`);
        }
      } catch (error) {
        console.error('Error:', error);
        showMessage('error', '‚ùå –ù–µ —É–¥–∞–ª–æ—Å—å –æ—Ç–ø—Ä–∞–≤–∏—Ç—å —Å–æ–æ–±—â–µ–Ω–∏–µ');
      }
    }
    
    // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∑–∞–≥—Ä—É–∑–∫–∏ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è
