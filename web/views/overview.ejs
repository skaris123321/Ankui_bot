  <%- include('partials/footer') %>
  
  <script>
    let membersChart, growthChart, messagesChart;
    
    async function loadStatistics() {
      const period = document.getElementById('periodSelect').value;
      
      try {
        const response = await fetch(`/api/statistics?period=${period}`);
        const data = await response.json();
        
        if (data.success) {
          updateStats(data.stats);
          updateCharts(data.charts);
        }
      } catch (error) {
        console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∏:', error);
      }
    }
    
    function updateStats(stats) {
      document.getElementById('newMessages').textContent = stats.newMessages || 0;
      document.getElementById('membersChange').textContent = `${stats.joined || 0}/${stats.left || 0}`;
      document.getElementById('totalMembers').textContent = stats.totalMembers || 0;
    }
    
    function updateCharts(charts) {
      // –ì—Ä–∞—Ñ–∏–∫ –ø—Ä–∏—Å–æ–µ–¥–∏–Ω–∏–ª–∏—Å—å/–≤—ã—à–ª–∏
      const membersCtx = document.getElementById('membersChart').getContext('2d');
      if (membersChart) membersChart.destroy();
      membersChart = new Chart(membersCtx, {
        type: 'line',
        data: {
          labels: charts.dates || [],
          datasets: [
            {
              label: '–ü—Ä–∏—Å–æ–µ–¥–∏–Ω–∏–ª–∏—Å—å',
              data: charts.joined || [],
              borderColor: '#57F287',
              backgroundColor: 'rgba(87, 242, 135, 0.1)',
              fill: true,
              tension: 0.4
            },
            {
              label: '–í—ã—à–ª–∏',
              data: charts.left || [],
              borderColor: '#5865F2',
              backgroundColor: 'rgba(88, 101, 242, 0.1)',
              fill: true,
              tension: 0.4
            }
          ]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              labels: { color: '#B9BBBE' }
            }
          },
          scales: {
            x: { ticks: { color: '#8E9297' }, grid: { color: '#202225' } },
            y: { ticks: { color: '#8E9297' }, grid: { color: '#202225' } }
          }
        }
      });
      
      // –ì—Ä–∞—Ñ–∏–∫ —Ä–æ—Å—Ç–∞ —É—á–∞—Å—Ç–Ω–∏–∫–æ–≤
      const growthCtx = document.getElementById('growthChart').getContext('2d');
      if (growthChart) growthChart.destroy();
      growthChart = new Chart(growthCtx, {
        type: 'line',
        data: {
          labels: charts.dates || [],
          datasets: [{
            label: '–£—á–∞—Å—Ç–Ω–∏–∫–æ–≤',
            data: charts.totalMembers || [],
            borderColor: '#9B59B6',
            backgroundColor: 'rgba(155, 89, 182, 0.1)',
            fill: true,
            tension: 0.4
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              labels: { color: '#B9BBBE' }
            }
          },
          scales: {
            x: { ticks: { color: '#8E9297' }, grid: { color: '#202225' } },
            y: { ticks: { color: '#8E9297' }, grid: { color: '#202225' } }
          }
        }
      });
      
      // –ì—Ä–∞—Ñ–∏–∫ —Å–æ–æ–±—â–µ–Ω–∏–π
      const messagesCtx = document.getElementById('messagesChart').getContext('2d');
      if (messagesChart) messagesChart.destroy();
      messagesChart = new Chart(messagesCtx, {
        type: 'line',
        data: {
          labels: charts.dates || [],
          datasets: [{
            label: '–°–æ–æ–±—â–µ–Ω–∏–π',
            data: charts.messages || [],
            borderColor: '#EB459E',
            backgroundColor: 'rgba(235, 69, 158, 0.1)',
            fill: true,
            tension: 0.4
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              labels: { color: '#B9BBBE' }
            }
          },
          scales: {
            x: { ticks: { color: '#8E9297' }, grid: { color: '#202225' } },
            y: { ticks: { color: '#8E9297' }, grid: { color: '#202225' } }
          }
        }
      });
    }
    
    // –ó–∞–≥—Ä—É–∂–∞–µ–º —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫—É –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
    document.addEventListener('DOMContentLoaded', () => {
