  <script>
    let selectedGuildId = '<%= selectedGuildId || '' %>';
    let currentEditMode = 'background';
    
    // –ü–æ–∫–∞–∑–∞—Ç—å/—Å–∫—Ä—ã—Ç—å –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è
    document.addEventListener('DOMContentLoaded', () => {
      const welcomeImageEnabled = document.getElementById('welcomeImageEnabled');
      const welcomeImageSettings = document.getElementById('welcomeImageSettings');
      
      if (welcomeImageEnabled && welcomeImageSettings) {
        welcomeImageEnabled.addEventListener('change', function() {
          welcomeImageSettings.style.display = this.checked ? 'block' : 'none';
          if (this.checked) {
            welcomeImageSettings.style.paddingTop = '1.5rem';
          }
        });
        
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
        welcomeImageSettings.style.display = welcomeImageEnabled.checked ? 'block' : 'none';
        if (welcomeImageEnabled.checked) {
          welcomeImageSettings.style.paddingTop = '1.5rem';
        }
      }
      
      // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è —Ç–∏–ø–∞ —Ñ–æ–Ω–∞
      updateBackgroundType();
      
      // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è —Ä–µ–∂–∏–º–∞ —Ä–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏—è
      setEditMode('background');
      
      // –î–æ–±–∞–≤–ª—è–µ–º –æ–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –¥–ª—è –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è –ø—Ä–µ–≤—å—é
      const backgroundImageUrl = document.getElementById('backgroundImageUrl');
      if (backgroundImageUrl) {
        backgroundImageUrl.addEventListener('input', updatePreview);
      }
      
      const usernameText = document.getElementById('usernameText');
      if (usernameText) {
        usernameText.addEventListener('input', updatePreview);
      }
      
      const welcomeText = document.getElementById('welcomeText');
      if (welcomeText) {
        welcomeText.addEventListener('input', updatePreview);
      }
      
      // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –ø—Ä–µ–≤—å—é
      updatePreview();
    });
    
    function handleServerSelect(guildId) {
      if (guildId) {
        window.location.href = `/dashboard/welcomer?guild=${guildId}`;
      } else {
        window.location.href = '/dashboard/welcomer';
      }
    }
    
    function setEditMode(mode) {
      currentEditMode = mode;
      
      // –£–±–∏—Ä–∞–µ–º –∞–∫—Ç–∏–≤–Ω—ã–π –∫–ª–∞—Å—Å —É –≤—Å–µ—Ö –∫–Ω–æ–ø–æ–∫
      document.querySelectorAll('.edit-btn').forEach(btn => {
        btn.classList.remove('active');
      });
      
      // –î–æ–±–∞–≤–ª—è–µ–º –∞–∫—Ç–∏–≤–Ω—ã–π –∫–ª–∞—Å—Å –≤—ã–±—Ä–∞–Ω–Ω–æ–π –∫–Ω–æ–ø–∫–µ
      document.querySelector(`[data-edit="${mode}"]`)?.classList.add('active');
      
      // –°–∫—Ä—ã–≤–∞–µ–º –≤—Å–µ –ø–∞–Ω–µ–ª–∏ —Ä–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏—è
      document.querySelectorAll('.edit-panel').forEach(panel => {
        panel.style.display = 'none';
      });
      
      // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –≤—ã–±—Ä–∞–Ω–Ω—É—é –ø–∞–Ω–µ–ª—å
      const panelMap = {
        'background': 'backgroundSettings',
        'avatar': 'avatarSettings',
        'username': 'usernameSettings',
        'text': 'textSettings'
      };
      
      const panelId = panelMap[mode];
      if (panelId) {
        document.getElementById(panelId).style.display = 'block';
      }
    }
    
    function updateBackgroundType() {
      const type = document.getElementById('backgroundType').value;
      const imageSettings = document.getElementById('backgroundImageSettings');
      const colorSettings = document.getElementById('backgroundColorSettings');
      
      if (type === 'image') {
        imageSettings.style.display = 'block';
        colorSettings.style.display = 'none';
      } else {
        imageSettings.style.display = 'none';
        colorSettings.style.display = 'block';
      }
      
      updatePreview();
    }
    
    function updateAvatarType() {
      updatePreview();
    }
    
    async function handleBackgroundImageUpload(input) {
      const file = input.files[0];
      if (!file) return;
      
      try {
        const url = await uploadFile(file);
        document.getElementById('backgroundImageUrl').value = url;
        updatePreview();
      } catch (error) {
        console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏:', error);
        alert('‚ùå –û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è: ' + error.message);
      }
    }
    
    async function uploadFile(file) {
      if (file.size > 10 * 1024 * 1024) {
        throw new Error('–†–∞–∑–º–µ—Ä —Ñ–∞–π–ª–∞ –Ω–µ –¥–æ–ª–∂–µ–Ω –ø—Ä–µ–≤—ã—à–∞—Ç—å 10 –ú–ë');
      }
      
      const allowedTypes = ['image/jpeg', 'image/png', 'image/gif', 'image/webp'];
      if (!allowedTypes.includes(file.type)) {
        throw new Error('–†–∞–∑—Ä–µ—à–µ–Ω—ã —Ç–æ–ª—å–∫–æ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è (JPEG, PNG, GIF, WEBP)');
      }
      
      const formData = new FormData();
      formData.append('image', file);
      
      const response = await fetch('/api/upload-image', {
        method: 'POST',
        body: formData
      });
      
      const result = await response.json();
      
      if (result.success) {
        let url = result.url;
        if (!url.startsWith('/')) {
          url = '/' + url;
        }
        return window.location.origin + url;
      } else {
        throw new Error(result.message || '–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏');
      }
    }
    
    function updatePreview() {
      const preview = document.getElementById('welcomeImagePreview');
      if (!preview) return;
      
      const backgroundType = document.getElementById('backgroundType')?.value || 'image';
      const backgroundImageUrl = document.getElementById('backgroundImageUrl')?.value || '';
      const backgroundColor = document.getElementById('backgroundColor')?.value || '#5865F2';
      const usernameText = document.getElementById('usernameText')?.value || 'Username';
      const usernameColor = document.getElementById('usernameColor')?.value || '#FFFFFF';
      const welcomeText = document.getElementById('welcomeText')?.value || '–î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å!';
      const textColor = document.getElementById('textColor')?.value || '#FFFFFF';
      
      // –û–±–Ω–æ–≤–ª—è–µ–º —Ñ–æ–Ω
      if (backgroundType === 'image' && backgroundImageUrl) {
        preview.style.backgroundImage = `url('${backgroundImageUrl}')`;
        preview.style.backgroundColor = 'transparent';
      } else {
        preview.style.backgroundImage = 'none';
        preview.style.backgroundColor = backgroundColor;
      }
      
      // –û–±–Ω–æ–≤–ª—è–µ–º –∏–º—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
      const previewUsername = document.getElementById('previewUsername');
      if (previewUsername) {
        previewUsername.textContent = usernameText;
        previewUsername.style.color = usernameColor;
      }
      
      // –û–±–Ω–æ–≤–ª—è–µ–º —Ç–µ–∫—Å—Ç
      const previewText = document.getElementById('previewText');
      if (previewText) {
        previewText.textContent = welcomeText;
        previewText.style.color = textColor;
      }
    }
    
    function useTemplate() {
      // –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –∑–Ω–∞—á–µ–Ω–∏—è –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é
      document.getElementById('backgroundType').value = 'image';
      document.getElementById('backgroundImageUrl').value = 'https://probot.media/UIODnfcGwa.png';
      document.getElementById('usernameText').value = 'Username';
      document.getElementById('usernameColor').value = '#FFFFFF';
      document.getElementById('welcomeText').value = '–î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å!';
      document.getElementById('textColor').value = '#FFFFFF';
      
      updateBackgroundType();
      updatePreview();
      
      alert('‚úÖ –®–∞–±–ª–æ–Ω –ø—Ä–∏–º–µ–Ω–µ–Ω!');
    }
    
    function insertVariable(variable) {
      const textarea = document.getElementById('welcomeMessage');
      const cursorPos = textarea.selectionStart;
      const textBefore = textarea.value.substring(0, cursorPos);
      const textAfter = textarea.value.substring(cursorPos);
      textarea.value = textBefore + variable + textAfter;
      textarea.focus();
      textarea.setSelectionRange(cursorPos + variable.length, cursorPos + variable.length);
    }
    
    function insertGoodbyeVariable(variable) {
      const textarea = document.getElementById('goodbyeMessage');
      const cursorPos = textarea.selectionStart;
      const textBefore = textarea.value.substring(0, cursorPos);
      const textAfter = textarea.value.substring(cursorPos);
      textarea.value = textBefore + variable + textAfter;
      textarea.focus();
      textarea.setSelectionRange(cursorPos + variable.length, cursorPos + variable.length);
    }
    
    async function saveSettings() {
      if (!selectedGuildId) {
        alert('‚ùå –í—ã–±–µ—Ä–∏—Ç–µ —Å–µ—Ä–≤–µ—Ä');
        return;
      }
      
      // –ü–æ–ª—É—á–∞–µ–º –≤—ã–±—Ä–∞–Ω–Ω—ã–π —Ç–∏–ø –æ—Ç–ø—Ä–∞–≤–∫–∏ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è
      const sendTypeRadios = document.querySelectorAll('input[name="welcomeImageSendType"]');
      let sendType = 'channel';
      sendTypeRadios.forEach(radio => {
        if (radio.checked) {
          sendType = radio.value;
        }
      });
      
      // –ü–æ–ª—É—á–∞–µ–º –≤—Å–µ —ç–ª–µ–º–µ–Ω—Ç—ã —Ñ–æ—Ä–º—ã
      const welcomeEnabledEl = document.getElementById('welcomeEnabled');
      const welcomeChannelEl = document.getElementById('welcomeChannel');
      const welcomeMessageEl = document.getElementById('welcomeMessage');
      const welcomeImageEnabledEl = document.getElementById('welcomeImageEnabled');
      const backgroundTypeEl = document.getElementById('backgroundType');
      const backgroundImageUrlEl = document.getElementById('backgroundImageUrl');
      const backgroundColorEl = document.getElementById('backgroundColor');
      const usernameTextEl = document.getElementById('usernameText');
      const usernameColorEl = document.getElementById('usernameColor');
      const welcomeTextEl = document.getElementById('welcomeText');
      const textColorEl = document.getElementById('textColor');
      const goodbyeEnabledEl = document.getElementById('goodbyeEnabled');
      const goodbyeChannelEl = document.getElementById('goodbyeChannel');
      const goodbyeMessageEl = document.getElementById('goodbyeMessage');
      
      const settings = {
        welcome_enabled: welcomeEnabledEl && welcomeEnabledEl.checked ? 1 : 0,
        welcome_channel_id: welcomeChannelEl ? welcomeChannelEl.value : '',
        welcome_message: welcomeMessageEl ? welcomeMessageEl.value : '',
        welcome_image_enabled: welcomeImageEnabledEl && welcomeImageEnabledEl.checked ? 1 : 0,
        welcome_image_send_type: sendType,
        welcome_image_background_type: backgroundTypeEl ? (backgroundTypeEl.value || 'image') : 'image',
        welcome_image_background: backgroundImageUrlEl ? backgroundImageUrlEl.value : '',
        welcome_image_background_color: backgroundColorEl ? backgroundColorEl.value : '',
        welcome_image_username_text: usernameTextEl ? usernameTextEl.value : '',
        welcome_image_username_color: usernameColorEl ? usernameColorEl.value : '',
        welcome_image_text: welcomeTextEl ? welcomeTextEl.value : '',
        welcome_image_text_color: textColorEl ? textColorEl.value : '',
        goodbye_enabled: goodbyeEnabledEl && goodbyeEnabledEl.checked ? 1 : 0,
        goodbye_channel_id: goodbyeChannelEl ? goodbyeChannelEl.value : '',
        goodbye_message: goodbyeMessageEl ? goodbyeMessageEl.value : ''
      };
      
      console.log('üíæ –°–æ—Ö—Ä–∞–Ω—è–µ–º—ã–µ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏:', settings);
      
      try {
        const response = await fetch(`/api/guild/${selectedGuildId}/welcomer`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(settings)
        });
        
        const result = await response.json();
        
        if (result.success) {
          alert('‚úÖ –ù–∞—Å—Ç—Ä–æ–π–∫–∏ —É—Å–ø–µ—à–Ω–æ —Å–æ—Ö—Ä–∞–Ω–µ–Ω—ã!');
        } else {
          alert('‚ùå –û—à–∏–±–∫–∞: ' + (result.message || '–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–∞—è –æ—à–∏–±–∫–∞'));
        }
      } catch (error) {
        console.error('–û—à–∏–±–∫–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è –Ω–∞—Å—Ç—Ä–æ–µ–∫:', error);
        alert('‚ùå –û—à–∏–±–∫–∞ –ø—Ä–∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–∏ –Ω–∞—Å—Ç—Ä–æ–µ–∫: ' + error.message);
      }
    }
  </script>
