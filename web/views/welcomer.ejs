  <style>
    :root {
      --sidebar-width: 180px;
      --border-radius: 12px;
      --transition: all 0.2s ease;
    }
    
    .dashboard-container {
      display: flex;
      height: calc(100vh - 80px);
      overflow: hidden;
    }
    
    .sidebar {
      width: var(--sidebar-width);
      background: #2F3136;
      border-right: 1px solid #202225;
      display: flex;
      flex-direction: column;
      overflow-y: auto;
      overflow-x: hidden;
