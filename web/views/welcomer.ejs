      border-color: var(--primary-color);
    }
    
    .form-group textarea {
      min-height: 100px;
      resize: vertical;
      font-family: inherit;
    }
    
    .form-group small {
      display: block;
      color: var(--text-secondary);
      font-size: 0.75rem;
      margin-top: 0.5rem;
    }
    
    .variables-list {
      background: #202225;
      border-radius: 4px;
      padding: 1rem;
      margin-top: 0.5rem;
    }
    
    .variables-list h4 {
      color: var(--text-primary);
      font-size: 0.85rem;
      margin: 0 0 0.5rem 0;
    }
    
    .variables-list code {
      display: inline-block;
      background: #36393F;
      padding: 0.25rem 0.5rem;
      border-radius: 3px;
      color: #57F287;
      font-size: 0.75rem;
      margin: 0.25rem 0.25rem 0.25rem 0;
      cursor: pointer;
    }
    
    .variables-list code:hover {
      background: #40444B;
    }
    
    .save-btn {
      background: var(--primary-color);
      color: white;
      border: none;
      padding: 0.75rem 2rem;
      border-radius: 4px;
      font-size: 0.9rem;
      font-weight: 600;
      cursor: pointer;
      transition: var(--transition);
    }
    
    .save-btn:hover {
