  <script>
    let selectedGuildId = '<%= selectedGuildId || '' %>';
    // –ü–æ–∫–∞–∑–∞—Ç—å/—Å–∫—Ä—ã—Ç—å –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è
    document.addEventListener('DOMContentLoaded', () => {
      const welcomeImageEnabled = document.getElementById('welcomeImageEnabled');
      const welcomeImageSettings = document.getElementById('welcomeImageSettings');
      
      if (welcomeImageEnabled && welcomeImageSettings) {
        welcomeImageEnabled.addEventListener('change', function() {
          welcomeImageSettings.style.display = this.checked ? 'block' : 'none';
          if (this.checked) {
            welcomeImageSettings.style.paddingTop = '1.5rem';
          }
        });
        
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
        welcomeImageSettings.style.display = welcomeImageEnabled.checked ? 'block' : 'none';
        if (welcomeImageEnabled.checked) {
          welcomeImageSettings.style.paddingTop = '1.5rem';
        }
      }
      
    });
    
    function handleServerSelect(guildId) {
      if (guildId) {
        window.location.href = `/dashboard/welcomer?guild=${guildId}`;
      } else {
        window.location.href = '/dashboard/welcomer';
      }
    }
    
    
    async function handleBackgroundImageUpload(input) {
      const file = input.files[0];
      if (!file) return;
      
      try {
        const url = await uploadFile(file);
        document.getElementById('backgroundImageUrl').value = url;
      } catch (error) {
        console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏:', error);
        alert('‚ùå –û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è: ' + error.message);
      }
    }
    
    async function uploadFile(file) {
      if (file.size > 10 * 1024 * 1024) {
        throw new Error('–†–∞–∑–º–µ—Ä —Ñ–∞–π–ª–∞ –Ω–µ –¥–æ–ª–∂–µ–Ω –ø—Ä–µ–≤—ã—à–∞—Ç—å 10 –ú–ë');
      }
      
      const allowedTypes = ['image/jpeg', 'image/png', 'image/gif', 'image/webp'];
      if (!allowedTypes.includes(file.type)) {
        throw new Error('–†–∞–∑—Ä–µ—à–µ–Ω—ã —Ç–æ–ª—å–∫–æ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è (JPEG, PNG, GIF, WEBP)');
      }
      
      const formData = new FormData();
      formData.append('image', file);
      
      const response = await fetch('/api/upload-image', {
        method: 'POST',
        body: formData
      });
      
      const result = await response.json();
      
      if (result.success) {
        let url = result.url;
        if (!url.startsWith('/')) {
          url = '/' + url;
        }
        return window.location.origin + url;
      } else {
        throw new Error(result.message || '–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏');
      }
    }
    
    function insertVariable(variable) {
      const textarea = document.getElementById('welcomeMessage');
      const cursorPos = textarea.selectionStart;
      const textBefore = textarea.value.substring(0, cursorPos);
      const textAfter = textarea.value.substring(cursorPos);
      textarea.value = textBefore + variable + textAfter;
      textarea.focus();
      textarea.setSelectionRange(cursorPos + variable.length, cursorPos + variable.length);
    }
    
    async function saveSettings() {
      if (!selectedGuildId) {
        alert('‚ùå –í—ã–±–µ—Ä–∏—Ç–µ —Å–µ—Ä–≤–µ—Ä');
        return;
      }
      
      // –ü–æ–ª—É—á–∞–µ–º —ç–ª–µ–º–µ–Ω—Ç—ã —Ñ–æ—Ä–º—ã
      const welcomeEnabledEl = document.getElementById('welcomeEnabled');
